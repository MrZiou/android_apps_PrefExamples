<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.n00bware.prefexample"
      android:versionCode="2"
      android:versionName="2.0">
    <uses-sdk android:minSdkVersion="4"></uses-sdk>

    <application android:icon="@drawable/example_icon"
        android:label="@string/app_name">

        <!-- .MainActivity is our MainActivity.java -->
        <activity android:name=".MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!-- so our app gets placed in the launcher app drawer android:name="android.intent.category.LAUNCHER" -->
            </intent-filter>
        </activity>

    </application>
</manifest>
